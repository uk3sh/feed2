<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center" >
    <div class="col my-auto">
      <div class="card border-primary rounded-0">
        
        <div class="card-header p-0">
          <div class="bg-primary text-white text-center py-2">
            <h3>Fill the form</h3>
            <p class="m-0">We value your feeback.</p>
          </div>
        </div>

        <div class="card-body p-3 col text-center">

          <%= form_for [@form, @submission] do |f| %>
            <%= f.hidden_field :contact, value: params[:contact] %>
              <% @qst.each do |a| %>
                <%= f.fields_for :answers do |ff|  %>

                  <div class="card-text question-css">
                    <%= ff.hidden_field :question_id, value: a.id %>
                    <%= a.question_text %>
                  </div>
                  

                  <div class="form-check">
                    <%= ff.radio_button :answer_text, 'Good', class: 'form-check-input' %>
                    <%= ff.label :answer_text, 'Good' , class: 'form-check-label' %>
                    <%= image_tag "happy.png" ,:height=>'25px',:width=>'25px' %>
                  </div>

                  <div class="form-check">
                    <%= ff.radio_button :answer_text, 'Neutral', class: 'form-check-input' %>
                    <%= ff.label :answer_text, 'Neutral', class: 'form-check-label'  %>
                    <%= image_tag "neutral.svg" ,:height=>'25px',:width=>'25px' %>
                  </div>
      

                  <div class="form-check">
                    <%= ff.radio_button :answer_text, 'Bad', class: 'form-check-input' %>
                    <%= ff.label :answer_text, 'Bad', class: 'form-check-label'  %>
                    <%= image_tag "sad.svg" ,:height=>'25px',:width=>'25px' %>
                  </div>

                               
                  
                  
              <% end %>
            <% end %>    
            <br>
            <div class="form-group">
              <%= f.submit "Submit", class: 'btn btn-primary' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>








