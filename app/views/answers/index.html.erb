<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answers</th>
      <th>Contact Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer_text %></td>
        <td><%= answer.contact %></td>
        <td><%= link_to 'Show', answer, remote: true %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="answer-form" style="display:none;"></div>


