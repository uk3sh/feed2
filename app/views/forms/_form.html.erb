<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_for(form) do |f| %>
        <% if form.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(form.errors.count, "error") %> prohibited this form from being saved:</h2>

            <ul>
            <% form.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_area :name, class: 'col-md-6 form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :sender_ID %>
          <%= f.text_area :sender_ID, class: 'col-md-6 form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :message %>
          <%= f.text_area :message, class: 'col-md-6 form-control' %>
        </div>

        <div class="form-group">    
          <%= f.submit class: 'btn btn-default'%>
        </div>   
      
      <% end %>
    </div>
  </div>
</div>
