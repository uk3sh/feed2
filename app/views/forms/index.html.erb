<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Forms</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @forms.each do |form| %>
        <tr>
          <td><%= form.name %></td>
          <td><%= form.url %></td>
          <td><%= link_to 'Show', form, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_form_path(form), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
          <td><%= link_to 'View Response', form_submissions_path(form), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Form', new_form_path, class: "btn btn-primary" %>
</div>