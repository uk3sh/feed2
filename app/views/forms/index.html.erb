<p id="notice"><%= notice %></p>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>

<div class="container">
  <div class="row">
    <div class="col">
      <h1>Forms</h1>

      <table class="table table-bordered table-responsive w-100 d-block d-md-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Url</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% @forms.each do |form| %>
            <tr>
              <td><%= form.name %></td>
              <td><%= form.url %></td>
              <td><%= link_to 'Show', form, class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_form_path(form), class: "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
              <td><%= link_to 'View Response', form_submissions_path(form), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Form', new_form_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>


<br>
