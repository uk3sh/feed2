<div class="container col-lg-8">
  <h1>Questions</h1>
    <table class="table table-bordered table-hover table-responsive w-100 d-block d-md-table">
      <thead>
        <tr>
          <th>Question text</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.question_text %></td>        
            <td><%= link_to 'Edit', edit_form_question_path(@form, question), class: "btn btn-primary" %></td>
            <td><%= link_to 'Delete', form_question_path(@form, question) , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="digg_pagination">
    <%= will_paginate @questions %>
    </div>
    <br>

    <%= link_to 'New Question', new_form_question_path, class: "btn btn-primary" %>
    <%= link_to 'Back', @form, class: "btn btn-primary" %>

    <div id="new-qstn" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
</div>

