<h1>New Question</h1>

<%= form_for [@form, @question] do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :question_type %>
    <%= f.select :question_type, [ 'Text', 'MCQ'],  {}, {:id=>"drop"} %>
  </div>

  
  <div class="form-group">
    <%= f.label :question_text %>
    <%= f.text_area :question_text, class: 'col-md-6 form-control' %>
  </div>  

  <div id="option-form" style="display:none;">
    <div class="form-group">
      <%= f.label :option1 %>
      <%= f.text_field :option, class: 'col-md-6 form-control' , multiple: true %>
    </div>

    <div class="form-group">
      <%= f.label :option2 %>
      <%= f.text_field :option, class: 'col-md-6 form-control' , multiple: true %>
    </div>

    <div class="form-group">
      <%= f.label :option3 %>
      <%= f.text_field :option, class: 'col-md-6 form-control' , multiple: true %>
    </div>

    <div class="form-group">
      <%= f.label :option4 %>
      <%= f.text_field :option, class: 'col-md-6 form-control' , multiple: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>



<%= link_to 'Back', form_questions_path, class: 'btn btn-primary' %>
